{
  "formatter": {
    "ignore": ["./node_modules/**/*", "./dist/**/*", "typings.ts"],
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "ignore": ["./node_modules/**/*", "./dist/**/*", "typings.ts"],
    "rules": {
      "complexity": {
        "noExtraBooleanCast": "off"
      },
      "correctness": {
        "noDelete": "off"
      },
      "style": {
        "useBlockStatements": "off",
        "noNegationElse": "off"
      },
      "nursery": {
        "noExplicitAny": "warn"
      }
    }
  }
}
